{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    ".astro/types.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.astro",
    "src/env.d.ts",
    "astro.config.mjs",
    "eslint.config.mjs",
    "prettier.config.mjs",
    "playwright.config.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", ".astro"]
}
