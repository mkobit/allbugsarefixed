---
import { formatDateToHumanString } from "../lib/date";
import { Badge } from "./ui/badge";
import { Heading } from "./ui/heading";
import { Text } from "./ui/text";

interface Props {
  title: string;
  pubDate: Date;
}

const { title, pubDate } = Astro.props;
---

<header class="mb-10 text-center max-w-3xl mx-auto pt-4">
  <div class="mb-4">
    <Badge variant="default">
      Blog Post
    </Badge>
  </div>

  <Heading level={1} as="h1">
    {title}
  </Heading>

  <div class="flex justify-center items-center gap-6 text-sm text-gray-500 dark:text-gray-400 font-mono">
    <Text as="time" variant="muted" size="sm" className="font-mono" datetime={pubDate.toISOString()}>
      {formatDateToHumanString(pubDate)}
    </Text>
    <Text as="span" variant="dim" size="sm" className="font-mono">/</Text>
    <Text as="span" variant="muted" size="sm" className="font-mono">General</Text>
  </div>
</header>
