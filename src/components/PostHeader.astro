---
import { Badge } from "./ui/badge";
import { Heading } from "./ui/heading";
import { Text } from "./ui/text";
import { HStack, Stack } from "./ui/stack";
import { Time } from "./ui/time";
import { SlashSeparator } from "./ui/separator";

interface Props {
  title: string;
  pubDate: Date;
}

const { title, pubDate } = Astro.props;
---

<header class="mb-10 text-center max-w-3xl mx-auto pt-4">
  <Stack align="center" gap="md" className="mb-4">
    <Badge variant="default"> Blog Post </Badge>
  </Stack>

  <Heading level={1} as="h1">
    {title}
  </Heading>

  <HStack justify="center" gap="lg">
    <Time date={pubDate} variant="muted" />
    <SlashSeparator />
    <Text as="span" variant="muted" size="sm" className="font-mono">General</Text>
  </HStack>
</header>
