---
import { Temporal } from "@js-temporal/polyfill";
import { SITE_TITLE, SITE_DESCRIPTION, FOOTER_LINKS } from "../consts";

const currentYear = Temporal.Now.plainDateISO().year;
---

<footer class="mt-auto py-12 bg-gray-100 dark:bg-black/20 border-t border-gray-200 dark:border-white/10">
  <div class="max-w-5xl mx-auto px-6 grid grid-cols-1 md:grid-cols-2 gap-8 text-sm">

    <div class="flex flex-col space-y-4">
      <span class="font-bold text-lg">{SITE_TITLE}</span>
      <p class="text-gray-600 dark:text-gray-400 max-w-xs">
        {SITE_DESCRIPTION}
      </p>
      <p class="text-gray-500">
        &copy; {currentYear} All Rights Reserved.
      </p>
    </div>

    <div class="flex flex-col space-y-2">
      <h3 class="font-bold text-gray-900 dark:text-gray-100 mb-2">Navigation</h3>
      {FOOTER_LINKS.general.map(link => (
        <a href={link.href} class="text-gray-600 dark:text-gray-400 hover:text-brand-primary transition-colors">{link.text}</a>
      ))}
    </div>
  </div>
</footer>
