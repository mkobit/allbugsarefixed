---
import { Sidebar } from "../components/Sidebar";
import { Footer } from "../components/Footer";
import ThemeInit from "../components/ThemeInit.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import "../styles/global.css";
import { Container } from "../components/ui/container";
import { getCollection } from "astro:content";

interface Props {
  title: string;
}

const { title } = Astro.props;

// Fetch posts for sidebar
const posts = await getCollection('blog', ({ data }) => {
    return data.status === 'published';
});

// Sort by date desc
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Data for fuzzy search (all published posts)
const allPosts = sortedPosts.map(post => ({
    title: post.data.title,
    slug: post.id,
    description: post.data.description,
    pubDate: post.data.pubDate.toISOString(),
    labels: post.data.labels
}));

// Recent posts (top 5)
const recentPosts = allPosts.slice(0, 5);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={SITE_DESCRIPTION} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | {SITE_TITLE}</title>
    <script>
      import "../lib/polyfills";
    </script>
    <ThemeInit />
    <style>
      /* Default sidebar width variables to minimize CLS */
      :root {
        --sidebar-width: 16rem; /* Default Desktop Expanded */
      }
      @media (max-width: 768px) {
        :root {
          --sidebar-width: 3rem; /* Default Mobile Collapsed (Sliver) */
        }
      }
    </style>
  </head>
  <body class="flex min-h-screen transition-colors duration-300">
    <!-- Sidebar component with client:load for hydration but SSR HTML -->
    <Sidebar client:load recentPosts={recentPosts} allPosts={allPosts} />

    <!-- Main Content Wrapper -->
    <!-- Used style={{ paddingLeft: 'var(--sidebar-width)' }} approach for dynamic sidebar width adjustment -->
    <div
        class="flex-grow flex flex-col w-full min-w-0 transition-[padding] duration-300"
        style="padding-left: var(--sidebar-width);"
    >
       <div class="h-1 w-full bg-brand-primary sticky top-0 z-50"></div>

       <main class="flex-grow py-8 md:py-12">
          <Container>
            <slot />
          </Container>
       </main>

       <Footer client:only="react" />
    </div>
  </body>
</html>
