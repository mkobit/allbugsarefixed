---
import { Header } from '../components/Header'
import { Footer } from '../components/Footer'
import ThemeInit from '../components/ThemeInit.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts'
import '../styles/global.css'
import { Container } from '../components/ui/container'
import { getCollection, type CollectionEntry } from 'astro:content'
import { Temporal } from '@js-temporal/polyfill'

interface Props {
  title: string
}

const { title } = Astro.props

// Fetch posts for search
const posts = await getCollection('blog', ({ data }: CollectionEntry<'blog'>) => {
  return data.status === 'published'
})

// Sort by date desc (though for search it doesn't strictly matter, but good for consistency)
const sortedPosts = posts.sort((a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) => Temporal.PlainDate.compare(
  Temporal.PlainDate.from(b.data.pubDate),
  Temporal.PlainDate.from(a.data.pubDate)
))

// Data for fuzzy search (all published posts)
const allPosts = sortedPosts.map((post: CollectionEntry<'blog'>) => ({
  title: post.data.title,
  slug: post.id.replace(/^src\/content\/blog\//, '').replace(/\/index\.mdx$/, '').replace(/\.mdx?$/, ''),
  description: post.data.description,
  pubDate: post.data.pubDate.toString(),
  labels: post.data.labels,
}));
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={SITE_DESCRIPTION} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>
      {title}
      {' '}
      |
      {' '}
      {SITE_TITLE}
    </title>
    <script>
      import '../lib/polyfills'
</script>
    <ThemeInit />
  </head>
  <body class="flex flex-col min-h-screen transition-colors duration-300">
    <!-- Header with client:load for interactivity -->
    <Header client:load allPosts={allPosts} />

    <!-- Main Content Wrapper -->
    <!-- Added pt-14 (header height) to ensure content isn't hidden behind fixed header -->
    <div class="flex-grow flex flex-col w-full min-w-0 pt-14">
      <main class="flex-grow py-8 md:py-12">
        <Container>
          <slot />
        </Container>
      </main>

      <Footer client:only="react" />
    </div>
  </body>
</html>
